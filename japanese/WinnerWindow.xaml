<Window x:Class="japanese.WinnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:japanese"
        mc:Ignorable="d"
        Title="WinnerWindow" Height="300" Width="600">
    <Grid>
        <TextBlock x:Name="winTextBox" HorizontalAlignment="Center" Margin="0,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center"><Run Language="ru-ru"/></TextBlock>
        <Button Content="Выйти из приложения" HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" Click="ExitButton_Click"/>
        <TextBlock HorizontalAlignment="Center" Text="Japanese Crossword" FontFamily="Impact" FontSize="24" Foreground="#FF5F539A" Margin="0,40,0,0" Width="216" FontStyle="Italic" TextAlignment="Center" VerticalAlignment="Top" Height="29"/>

    </Grid>
</Window>
